<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GenericDev.ImageExamples.Loading"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout>
            <ActivityIndicator AbsoluteLayout.LayoutBounds="0.5, 0.5, 100, 100" AbsoluteLayout.LayoutFlags="PositionProportional"
                               Color="White"
                               IsVisible="{Binding IsLoading, Source={x:Reference Image}}"/>
            <Image x:Name="image" Aspect="AspectFill" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>