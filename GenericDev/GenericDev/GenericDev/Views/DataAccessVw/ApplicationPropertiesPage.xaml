<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GenericDev.Views.DataAccessVw.ApplicationPropertiesPage"
             Title="Application Properties">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="title" Label="Title" Text="{Binding Title}" Completed="OnChange" />
                        <SwitchCell x:Name="notificationsEnabled" Text="Notifications" On="{Binding NotificationEnabled}" />
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>