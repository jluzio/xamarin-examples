<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GenericDev.Views.DataAccessVw.Exercise1.MovieDetailsPage"
             Title="{Binding ShowTitle}">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="{Binding Poster}" HorizontalOptions="Center" />
            <Label Text="{Binding ShowTitle}" FontSize="20" />
            <Label Text="{Binding ReleaseYear}" Font="10" />
            <Label Text="{Binding Summary}" FontSize="15" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>