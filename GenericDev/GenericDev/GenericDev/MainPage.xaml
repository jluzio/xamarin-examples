<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GenericDev"
             xmlns:localStackLayoutExamples="clr-namespace:GenericDev.StackLayoutExamples"
             xmlns:localGridLayoutExamples="clr-namespace:GenericDev.GridLayoutExamples"
             xmlns:localAbsoluteLayoutExamples="clr-namespace:GenericDev.AbsoluteLayoutExamples"
             xmlns:localRelativeLayoutExamples="clr-namespace:GenericDev.RelativeLayoutExamples"
             x:Class="GenericDev.MainPage">
    <!--Pages can be added as references or inline-->
    <ContentPage Title="Home">
        <Label Text="Welcome!" FontSize="30" HorizontalOptions="Center" VerticalOptions="Center" />
    </ContentPage>
    <local:QuotesPage Title="Quotes" />
    <localStackLayoutExamples:ExamplesPage Title="Stack Layout" />
    <localGridLayoutExamples:ExamplesPage Title="Grid Layout" />
    <localAbsoluteLayoutExamples:ExamplesPage Title="Absolute Layout" />
    <localRelativeLayoutExamples:ExamplesPage Title="Relative Layout" />
</TabbedPage>