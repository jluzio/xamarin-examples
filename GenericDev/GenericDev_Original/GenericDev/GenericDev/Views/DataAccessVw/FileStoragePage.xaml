<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GenericDev.Views.DataAccessVw.FileStoragePage"
             Title="File Storage">
    <ContentPage.Content>
        <StackLayout>
            <TableView Intent="Form">
                <TableRoot>
                    <TableSection>
                        <EntryCell x:Name="answerText" Label="Answer" Placeholder="42" />
                    </TableSection>
                    <TableSection>
                        <ViewCell>
                            <StackLayout>
                                <Button x:Name="saveBtn" Text="Save" Clicked="saveBtn_Clicked" />
                                <Button x:Name="loadBtn" Text="Load" Clicked="loadBtn_Clicked" />
                            </StackLayout>
                        </ViewCell>
                    </TableSection>
                </TableRoot>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>